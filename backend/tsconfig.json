{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "server.ts",
    "services/**/*.ts",
    "config/**/*.ts",
    "types/**/*.ts",
    "middleware/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", "config/database.ts"]
}
